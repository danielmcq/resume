{
    "app": {
        "verbosity": "short"
    },
    "dataSource": {
        "location": "data.json",
        "type": "file-local"
    },
    "pdf-html": {
        "border": 0,
        "format": "Letter",
        "orientation": "portrait",
        "type": "pdf"
    },
    "server": {
        "hostname": "localhost",
        "port": 3000,
        "protocol": "http"
    },
    "logging": {
        "global": {
            "transports": [],
            "exitOnError": false,
            "stripColors": true
        },
        "console": {
            "level": "debug",
            "handleExceptions": true,
            "json": false,
            "colorize": true,
            "prettyPrint": true
        },
        "request": {
            "meta": false,
            "expressFormat": true,
            "level": "verbose",
            "colorize": true,
            "statusLevels": {
                "success": "verbose",
                "warn": "warn",
                "error": "error"
            }
        }
    }
}