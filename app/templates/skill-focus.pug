extend default

block content
	- jobs = resume.getJobs()
	if jobs.length
		.row
			h1.col#work-experience Work Experience

		each job in jobs
			include ./includes/job-header.pug

			.row
				include ./includes/duties-6.pug
				include ./includes/projects-6.pug

			.row
				include ./includes/accomplishments-6.pug
				include ./includes/skills-6.pug

			.row
				.col
					hr

	- personalProjects = resume.getPersonalProjects()
	if personalProjects.length
		.row
			.col-md-12.col-xs-12
				h1#personalProjects Personal Projects
			.col-md-12.col-xs-12
				include ./includes/personalProjects.pug

	- studies = resume.getStudies()
	if studies.length
		.row
			.col-md-12.col-xs-12
				h1#education Education
		.row
			.col-md-12.col-xs-12
				include ./includes/education.pug