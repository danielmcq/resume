header.row.header
	.col.text-left
		span.contact-name= resume.getPerson().name
	.col.text-center
		a.contact-email(href="mailto:"+resume.getPerson().email)= resume.getPerson().email
	.col.text-center
		a.contact-github(href="https://github.com/"+resume.getPerson().github, target="_blank")= "github.com/"+resume.getPerson().github
	.col.text-right
		a(href="tel:+1"+Utils.phone.normalize(resume.getPerson().phone)).contact-phone= Utils.phone.format(resume.getPerson().phone, "NNN.NNN.NNNN")